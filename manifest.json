{
  "manifest_version": 3,
  "name": "Spec Checker",
  "version": "1.0",
  "description": "웹페이지 내 사양 표기 검사",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
